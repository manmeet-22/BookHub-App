<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/colorPrimary"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bookImageThumb"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:backgroundTint="@color/colorPrimary"
            android:scaleType="centerCrop"
            android:src="@drawable/no_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bookTitle"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/tile_heading_text"
                tools:text="@string/title_heading" />

            <TextView
                android:id="@+id/bookAuthors"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/tile_text"
                tools:text="@string/authors_heading" />

            <TextView
                android:id="@+id/bookPublishDate"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/tile_text"
                tools:text="@string/publish_date_heading" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
